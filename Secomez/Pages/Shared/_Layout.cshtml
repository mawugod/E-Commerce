<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Secomez</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Secomez.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
       
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index"> Secomez
                        <i class="bi-house-door"></i> <!-- Bootstrap Icons: Home -->
                    </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/AboutUs">About Us <i class="bi bi-clipboard2-fill"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/ContactUs">Contact Us <i class="bi bi-telephone-fill"></i></a>
                            </li>
                       
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/ProductUsers">View Products <i class="bi bi-basket"></i></a>
                            </li>
                                                   
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Cart">Cart <i class="bi bi-cart4"></i></a>
                            </li>
                           @*  @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Admin
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" asp-area="" asp-page="/addProduct">Add Product</a>
                                    </div>
                                </li>
                            } *@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Policy <i class="bi bi-file-earmark-ruled-fill"></i></a>
                        </li>
                        </ul>
                   
                </div>
                
                <partial name="_LoginPartial" />
                
                
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container">
    <footer class="border-top text-muted"> 
        <div class="row">
                <div class="col-sm-4">
                    <div class="page-header">
                        <h1>Links <i class="bi bi-three-dots-vertical"></i></i></h1>
                    </div>
                    <div class="well">
                        <ul class="list-inline">
                            <li><a asp-area="" asp-page="/Index" >Home</a></li>
                            <li><a asp-area="" asp-page="/About"><i class="fa fa-twitter-square">About Us</i></a></li>
                            <li><a asp-area="" asp-page="/Contact"><i class="fa fa-instagram">Contact Us</i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="page-header">
                        <h1>Social Media <i class="bi bi-x-diamond"></i></h1>
                    </div>
                    <div class="well">
                        <ul class="list-inline">
                            <li><a asp-area="" asp-page="">Facebook &nbsp;<i class="bi bi-facebook"></i></a></li>
                            <li><a asp-area="" asp-page="">Twitter &nbsp;<i class="bi bi-twitter-x"></i></a></li>
                            <li><a asp-area="" asp-page="">Instagram &nbsp;<i class="bi bi-instagram"></i></a></li>
                        </ul>
                        
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="page-header">
                        <h1>Location <i class="bi bi-pin-map"></i></h1>
                    </div>
                     <div class="well">

                        <ul class="list-inline">
                            <li>NG1 7FE</li>
                            <li>Carrington Street</li>
                            <li>UK<li>
                        </ul>
                    </div>
                </div>


            </div>
            <hr />
            <p>
                &copy; The Best Security Commerce - 2024|| <span>NG1 7FE, Carrington Street || info@secomerce.com</span>
            </p>

    </footer>
    </div>
    <script src="~/js/slider.js"></script>
    <script src="~/js/search.js"></script>
@*     <script src="~/js/Notify.js"></script>
 *@    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @* <script src="~/js/site.js" asp-append-version="true"></script> *@

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>